<% if @all_contributions.any? %>
  <% @all_contributions.reverse_each do |contribution| %>
    <%= image_tag contribution.image.url(:medium) %>
    <br>
    <%= contribution.comment %>
    <br>
    <%= link_to 'view all', contribution_path(contribution) %>
    <br>
  <% end %>
<% else %>
  No contributions yet
<% end %>
<br>
<%= link_to 'Add a contribution', new_contribution_path %>
